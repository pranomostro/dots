[user]
	email=pranomostro@posteo.net
	name=pranomostro

[core]
	editor=rlwrap -s 1000000 ed
	symlinks=false

[alias]
	pf="push --tags --follow-tags"
	please="push --force-with-lease"

	ds="diff --staged"
	dds="diff --staged --stat"

	ad="add ."

	rc="rm --cached"

	br="branch"

	co="checkout"
	cm="checkout master"

	tl="tag -l -n16 --sort v:refname"
	ta="tag -as"

	lm="log --pretty=oneline"
	ls="log --pretty=oneline --stat"
	la="log --pretty=oneline --stat --graph --abbrev-commit"
	lf="log --pretty=oneline --graph --abbrev-commit"
	graph="log --graph --oneline --all --decorate --topo-order"
	lg="log --pretty=format:\"%C(yellow)%h %ad%Cred%d %Creset%s%Cblue [%an]\" --decorate --date=relative --abbrev-commit --abbrev=10 --graph --stat"

	st="status --short --branch"

	ca="commit --amend --no-edit"
	com="commit -Sa"
	praise="blame"

[push]
	default=matching

[sendemail]
	smtpEncryption=tls
	smtpServer=smtp.gmail.com
	smtpUser=pranomestro@gmail.com
	smtpServerPort=587

[branch "master"]
	remote = origin
	merge = refs/heads/master
