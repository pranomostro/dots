#function definition for the fish shell

#fortune and fortune-likes, entertaining!

function fortune
	command fortune /usr/local/plan9/lib/fortunes
end

function troll
	command fortune /usr/local/share/troll
end

function bullshit
	command bullshit /usr/local/share/bullshit
end

#having default options to commands which are always useful.

function pacman
	command pacman --color always $argv
end

function cl
	command ls --color=always --group-directories-first $argv
end

function ll
	command ls -ali --color=never --group-directories-first $argv
end

function l
	command ls --color=never $argv
end

function ls
	command ls --color=never $argv
end

function e
	command ed $argv
end

function nl
	command nl -ba $argv
end

function man
	command man $argv | less
end

#silence is golden

function bc
	command bc -q $argv
end

function gdb
	command gdb -q $argv
end

#definition of new commands or just abbreviations

function g
	grep -E $argv
end

function cs
	clear
end

function lc
	wc -l $argv
end

function md
	mkdir $argv
end

function d
	pwd $argv
end

function cd..
	cd ..
end

function tch
	touch $argv
end

function python
	python2.7 $argv
end

function c
	tcc -run $argv
end

function rm
	r $argv
end

function mcd
	md $argv
	cd $argv
end

function cls
	cd $argv
	ls
end

#rlwrap is great

#for the zoo

function boa
	rlwrap -s 1000000 boa
end

function levy
	rlwrap -s 1000000 levy
end

function prolog
	rlwrap -s 1000000 prolog
end

function poly
	rlwrap -s 1000000 poly
end

function sub
	rlwrap -s 1000000 sub
end

#other repls

function k
	rlwrap -s 1000000 -S 'k ' k
end

function rc
	rlwrap -s 1000000 rc $argv
end

function ed
	rlwrap -s 1000000 ed $argv
end

function lisp
	rlwrap -s 1000000 -S '() ' lisp $argv
end

function perl6
	rlwrap -s 1000000 -S ':â†’ ' perl6 $argv
end

function pn
	rlwrap -s 1000000 (which potion) $argv
end

function potion
	rlwrap -s 1000000 (which potion) $argv
end

function shirka
	rlwrap -s 1000000 shirka $argv
end

#Just to troll a little bit

function emacs
	ed -r -s
end

function vim
	info Ed
end

function vi
	man ed
end

function nano
	sam $argv
end

