#function definition for the fish shell

#fortune-likes

function troll
	command fortune /usr/local/share/troll
end

#having default options to commands which are always useful.

function cl
	command ls --color=always --group-directories-first $argv
end

function ll
	command ls -ali --color=never --group-directories-first $argv
end

function l
	command ls $argv
end

function e
	command ed $argv
end

function nl
	command nl -ba $argv
end

#silence is golden

function bc
	command bc -ql $argv
end

function gdb
	command gdb -ex 'set confirm off' -q $argv
end

function curl
	command curl -s $argv
end

function python
	python3 -q $argv
end

#definition of new commands or just abbreviations

function g
	grep -E $argv
end

function cs
	clear
end

function lc
	wc -l $argv
end

function md
	mkdir $argv
end

function d
	pwd $argv
end

function cd..
	cd ..
end

function tch
	touch $argv
end

function rm
	r $argv
end

function mcd
	md $argv
	cd $argv
end

function cls
	cd $argv
	ls
end

function vd
	vis-digraph $argv | xsel -psb
end

#rlwrap is great

#repls

function nc
	rlwrap -s 1000000 nc -N $argv
end

function rc
	rlwrap -s 1000000 rc $argv
end

function ed
	rlwrap -s 1000000 ed $argv
end

function lua
	rlwrap -s 1000000 lua $argv
end

function kg
	rlwrap -s 1000000 kg $argv
end

function hl
	rlwrap -s 1000000 hl $argv
end

function ocaml
	rlwrap -s 100000 ocaml $argv
end

#Just to troll a little bit

function emacs
	ed -r -s
end

function vim
	info Ed
end

function vi
	man ed
end

function nano
	sam $argv
end
