#!/bin/sh

XRESOURCES="/home/adrian/.xresources"

if [ -f "$XRESOURCES" ]; then
	xrdb "$XRESOURCES"
fi

xsetroot -name geb
xsetroot -cursor_name left_ptr

xmodmap /home/adrian/.config/kb/neo.xmodmap

#Make this a calculation with root window size and border with some time
feh --no-fehbg --image-bg black --bg-fill '/usr/share/wall/bomb.jpg'
barinfo | lemonbar -g '1348x16+5+5' -B '#ffffff' -F '#000000' &
sxhkd -c /home/adrian/.sxhkdrc &
wew | yawee.sh &

#ignore all bars
barign &

exec sh -c 'while :; do sleep 10; done'
